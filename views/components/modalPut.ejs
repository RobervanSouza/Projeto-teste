<section class="modal-overlay" id="overlay">
<div class="modal" id="modal">
    
    <div class="modal-header">
     <h3> Atualizar Convite </h3>
     <a href="/" id="fecha-modal" ><i class="bi bi-x-octagon-fill"></i></a>
    </div>

    <div class="modal-body">
        
        <form class="form-modal" action="/update/<%= convitePut.id %>" method="POST">
          

            <label for="nome"> Nome:</label>
            <input type="text" id="nome" name="nome"  value="<%= convitePut.nome %>" required />
  
            <label for="descricao"> Descrição:</label>
            <input type="text" id="descricao" name="descricao" value="<%= convitePut.descricao %>" required/>
  
            <label for="tipo"> Tipo:</label>
             <input type="text" id="tipo" name="tipo"  value="<%= convitePut.tipo %>"  required/>
  
            <label for="imagem"> Link da Imagem:</label>
            
            <input type="text" id="imagem" name="imagem"  value="<%= convitePut.imagem %>" required/>
  
            <button id="btnCadastrar" type="submit">Atualizar</button>
            
        </form>
    </div>



</div>
</section>