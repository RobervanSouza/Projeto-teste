          <input type="text" id="descricao" name="descricao" required placeholder="descricao"/><!--    -->

          <label for="tipo"> Tipo:</label><!--    -->
           <input type="text" id="tipo" name="tipo" required placeholder="tipo do convite" />

          <label for="imagem"> Link da Imagem:</label
          ><!--    -->
          <input type="text" id="imagem" name="imagem"required placeholder="endereço da imagem"/>

          <button id="btnCadastrar" type="submit">Cadastrar</button
          ><!--    -->
        </form>
      </div>
    </section>

    <%- include('./components/footer') %>

    
    <script src="js/script.js"></script>
  </body>
