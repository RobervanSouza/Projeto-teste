<!DOCTYPE html>
<html lang="pt-Br">
  <head>
    <%- include('./components/head') %>
  </head>
  <body class="teste">
   
    
    <%- include('./components/nav') %>

    
    <section id="cadastro">
  
      <img class="imagem" src="/img/00fccdaf0f2f01a01a2c4c2536620d87.jpg" alt="">
      <div>
        <h2>Cadastre um novo convite</h2>

        <form action="/create" method="POST">
          

